    var article_source_content = "#";
    if (blog) {
        if (blog.type === 0) {
            article_source_content = blog.article
        }

        if (articleIndex) {
            article_source_content = blog.article.find(article1 => article1.index === articleIndex).content
        }
    }

textarea#MD_source.form-control.mt-3(rows="10")= article_source_content
