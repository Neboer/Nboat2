mixin make_pagination(current_page, total_page, href_list)
    -
        var range = (start, stop) => Array.from({length: stop - start + 1}, (_, i) => start + i);
        var previous_href = "#", next_href = "#"
        if (current_page === 1) {
            next_href = href_list[1]
        } else if (current_page === total_page) {
            previous_href = href_list[href_list.length - 2]
        } else {
            href_list.forEach(href, index => {
                if (index === current_page - 1) {
                    previous_href = href_list[index - 1]
                    next_href = href_list[index + 1]
                }
            })
        }

    nav
        ul.pagination.justify-content-center
            if current_page === 1
                li.page-item.disabled
                    a.page-link(href="#", tabindex="-1", aria-disabled="true")
                        i.fa.fa-arrow-left
            else
                li.page-item
                    a.page-link(href=previous_href, tabindex="-1", aria-disabled="true")
                        i.fa.fa-arrow-left
            each num in range(1,total_page)
                if current_page === num
                    li.page-item.active
                        a.page-link(href=href_list[num - 1]) num
                else
                    li.page-item
                        a.page-link(href=href_list[num - 1]) num
            if current_page === total
                li.page-item.disabled
                    a.page-link(href="#")
                        i.fa.fa-arrow-right
            else
                li.page-item
                    a.page-link(href=next_href)
                        i.fa.fa-arrow-right
